<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.android.formalchat.RoundedImageView
            android:id="@+id/chat_prof_pic"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/profile_pic"
            android:layout_margin ="10dp"
            android:layout_centerVertical="true"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_toRightOf="@+id/chat_prof_pic"
            android:layout_centerVertical="true"
            >
            <TextView
                android:id="@+id/chat_prof_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Your Name"
                android:textColor="@color/white"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/chat_prof_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textStyle="italic"
                android:text="This is my Dummy Message"/>

        </LinearLayout>
    </RelativeLayout>

</LinearLayout>