<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <!-- The main content view -->
    <FrameLayout
        android:id="@+id/content_frame"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <RelativeLayout
        android:id="@+id/left_drawer"
        android:layout_width="@dimen/l_drawer_width"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:orientation="vertical"
        android:gravity="center">
        <RelativeLayout
            android:id="@+id/images_layout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/l_img_height"
            android:gravity="center">
            <ImageView
                android:id="@+id/image_view"
                android:layout_width="match_parent"
                android:layout_height="@dimen/l_img_height"
                android:layout_centerInParent="true"
                android:background="@drawable/background"/>
            <com.android.formalchat.RoundedImageView
                android:id="@+id/profile_img"
                android:layout_width="@dimen/profile_img_dimen"
                android:layout_height="@dimen/profile_img_dimen"
                android:fadingEdge="horizontal"
                android:layout_centerInParent="true"
                android:src="@drawable/profile_pic_"
                />
            <TextView
                android:id="@+id/profile_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/profile_img"
                android:layout_marginLeft="@dimen/profile_name_left_margin"
                android:textColor="@color/white"
                />
        </RelativeLayout>

        <ListView
            android:id="@+id/left_list_drawer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/images_layout"
            android:layout_gravity="start"
            android:paddingTop="@dimen/l_padding_top"
            android:choiceMode="singleChoice"
            android:divider="@color/transp"
            android:dividerHeight="@dimen/l_drawer_divider_height"
            android:background="@color/white" />
    </RelativeLayout>
</android.support.v4.widget.DrawerLayout>
