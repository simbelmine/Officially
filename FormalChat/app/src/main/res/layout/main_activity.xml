<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.SwipeRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/swipeContainer"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!--<ScrollView-->
    <!--android:layout_width="match_parent"-->
    <!--android:layout_height="match_parent"-->
    <!--android:fillViewport="true"-->
    <!-->-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <FrameLayout
        android:id="@+id/main_rv_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/material_gray"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            tools:context=".MainActivity">

            <android.support.v7.widget.RecyclerView
                android:id="@+id/recycler_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scrollbars="vertical"
                />

        </RelativeLayout>

        <LinearLayout
            android:id="@+id/search_toolbar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/header_height"
            android:orientation="horizontal"
            android:background="@color/material_transp_darker_gray"
            >
            <Spinner
                android:id="@+id/search_for"
                android:layout_width="@dimen/header_element_width"
                android:layout_height="match_parent"
                android:entries="@array/search_by_criteria"
                android:layout_weight="6"
                android:layout_gravity="bottom"
                android:layout_marginLeft="16dp"
                />
            <ImageButton
                android:id="@+id/grid_list_btn"
                android:layout_width="@dimen/header_element_width"
                android:layout_height="match_parent"
                android:background="@color/transp_white"
                android:src="@drawable/grid"
                android:scaleType="centerCrop"
                android:layout_gravity="bottom"
                android:padding="8dp"
                android:layout_marginRight="16dp"
                android:layout_weight="1"
                />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone"
            >
            <LinearLayout
                android:id="@+id/matches"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">
                <TextView
                    android:id="@+id/match_results_txt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:textColor="@color/items"
                    android:text="MATCHES"/>
                <TextView
                    android:id="@+id/no_result_matches"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10dp"
                    android:text="@string/no_search_result"
                    android:visibility="gone"
                    />
                <com.android.formalchat.ScrollableGridView
                    android:id="@+id/people_gridview_matches"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:columnWidth="@dimen/grid_column_width"
                    android:numColumns="2"
                    android:layout_margin="@dimen/grid_margin"
                    android:verticalSpacing="@dimen/grid_margin"
                    android:horizontalSpacing="@dimen/grid_margin"
                    android:stretchMode="columnWidth"
                    android:gravity="center"
                    android:visibility="visible"
                    />
                <com.android.formalchat.ScrollableListView
                    android:id="@+id/people_listview_matches"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="@dimen/list_margin"
                    android:dividerHeight="@dimen/list_margin"
                    android:divider="@color/transp"
                    android:visibility="visible"
                    />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/all"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/matches"
                android:visibility="gone"
                >
                <!--<TextView-->
                <!--android:id="@+id/all_results_txt"-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:padding="10dp"-->
                <!--android:textColor="@color/items"-->
                <!--android:text="ALL RESULTS"/>-->
                <TextView
                    android:id="@+id/no_result_all"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10dp"
                    android:text="@string/no_search_result"
                    android:visibility="gone"
                    />
                <GridView
                    android:id="@+id/people_gridview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:columnWidth="@dimen/grid_column_width"
                    android:numColumns="2"
                    android:layout_margin="@dimen/grid_margin"
                    android:verticalSpacing="@dimen/grid_margin"
                    android:horizontalSpacing="@dimen/grid_margin"
                    android:stretchMode="columnWidth"
                    android:gravity="center"
                    android:visibility="visible"
                    />
                <com.android.formalchat.ScrollableListView
                    android:id="@+id/people_listview"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="@dimen/list_margin"
                    android:dividerHeight="@dimen/list_margin"
                    android:divider="@color/transp"
                    />
            </LinearLayout>
        </RelativeLayout>
    </FrameLayout>
    <RelativeLayout
        android:id="@+id/loadMore_progress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_alignParentBottom="true"
        android:layout_above="@+id/main_rv_layout"
        android:visibility="gone"
        >
        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:indeterminate="true"
            />
    </RelativeLayout>
    </RelativeLayout>
    <!--</ScrollView>-->
</android.support.v4.widget.SwipeRefreshLayout>