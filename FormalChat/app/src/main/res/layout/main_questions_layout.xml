<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:background="@color/gray"></LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/name_lbl"
                android:layout_width="match_parent"
                android:layout_height="@dimen/label_height"
                android:layout_marginBottom="@dimen/label_margin_bottom"
                android:paddingLeft="@dimen/label_padding"
                android:gravity="center_vertical"
                android:text="@string/name_lbl"
                android:textAllCaps="true"
                android:background="@color/green_transp"/>
            <EditText
                android:id="@+id/name_edit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/name_lbl"
                android:text="Svetla"/>
        </RelativeLayout>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/gender_lbl"
                android:layout_width="match_parent"
                android:layout_height="@dimen/label_height"
                android:layout_marginBottom="@dimen/label_margin_bottom"
                android:paddingLeft="@dimen/label_padding"
                android:gravity="center_vertical"
                android:text="@string/gender_lbl"
                android:textAllCaps="true"
                android:background="@color/green_transp"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center">
                <CheckBox
                    android:id="@+id/male_check"
                    android:layout_width="@dimen/check_height"
                    android:layout_height="@dimen/check_height"
                    android:button="@drawable/custom_checkbox_male"
                    />
                <TextView
                    android:id="@+id/male_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/check_height"
                    android:gravity="center"
                    android:layout_toRightOf="@+id/male_check"
                    android:paddingLeft="@dimen/padding_left_check"
                    android:layout_marginRight="@dimen/margin_right_check"
                    android:text="Male"/>
                <CheckBox
                    android:id="@+id/female_check"
                    android:layout_width="@dimen/check_height"
                    android:layout_height="@dimen/check_height"
                    android:layout_marginLeft="@dimen/margin_left_check"
                    android:layout_toRightOf="@+id/male_txt"
                    android:button="@drawable/custom_checkbox_female"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/check_height"
                    android:gravity="center"
                    android:layout_toRightOf="@+id/female_check"
                    android:paddingLeft="@dimen/padding_left_check"
                    android:text="Female"/>
            </RelativeLayout>
        </LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/age_lbl"
                android:layout_width="match_parent"
                android:layout_height="@dimen/label_height"
                android:layout_marginBottom="@dimen/label_margin_bottom"
                android:layout_marginTop="@dimen/label_margin_bottom"
                android:paddingLeft="@dimen/label_padding"
                android:gravity="center_vertical"
                android:text="@string/age_lbl"
                android:textAllCaps="true"
                android:background="@color/green_transp"/>
            <EditText
                android:id="@+id/age_edit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/age_lbl"
                android:text="29"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/location_lbl"
                android:layout_width="match_parent"
                android:layout_height="@dimen/label_height"
                android:layout_marginBottom="@dimen/label_margin_bottom"
                android:paddingLeft="@dimen/label_padding"
                android:gravity="center_vertical"
                android:text="@string/location_lbl"
                android:textAllCaps="true"
                android:background="@color/green_transp"/>
            <EditText
                android:id="@+id/location_edit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/location_lbl"
                android:editable="false"
                android:textColor="@color/dark_gray"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/interested_in_lbl"
                android:layout_width="match_parent"
                android:layout_height="@dimen/label_height"
                android:layout_marginBottom="@dimen/label_margin_bottom"
                android:paddingLeft="@dimen/label_padding"
                android:gravity="center_vertical"
                android:text="@string/interested_in_lbl"
                android:textAllCaps="true"
                android:background="@color/green_transp"/>
            <!--<Spinner-->
                <!--android:id="@+id/interested_in_edit"-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_below="@+id/interested_in_lbl"-->
                <!--android:entries="@array/interested_in_values"/>-->
            <TextView
                android:id="@+id/interested_in_edit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/interested_in_lbl"
                android:layout_marginBottom="@dimen/label_margin_bottom"
                android:paddingLeft="@dimen/label_padding"
                android:text="@string/choice_txt"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/looking_for_lbl"
                android:layout_width="match_parent"
                android:layout_height="@dimen/label_height"
                android:layout_marginBottom="@dimen/label_margin_bottom"
                android:paddingLeft="@dimen/label_padding"
                android:gravity="center_vertical"
                android:text="@string/looking_for_lbl"
                android:textAllCaps="true"
                android:background="@color/green_transp"/>
            <!--<Spinner-->
                <!--android:id="@+id/looking_for_edit"-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_below="@+id/looking_for_lbl"-->
                <!--android:entries="@array/looking_for_values"/>-->
            <TextView
                android:id="@+id/looking_for_edit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/looking_for_lbl"
                android:layout_marginBottom="@dimen/label_margin_bottom"
                android:paddingLeft="@dimen/label_padding"
                android:text="@string/choice_txt"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/about_me_lbl"
                android:layout_width="match_parent"
                android:layout_height="@dimen/label_height"
                android:layout_marginBottom="@dimen/label_margin_bottom"
                android:paddingLeft="@dimen/label_padding"
                android:gravity="center_vertical"
                android:text="@string/about_me_lbl"
                android:textAllCaps="true"
                android:background="@color/green_transp"/>
           <TextView
                android:id="@+id/about_me_edit"
                android:layout_width="match_parent"
                android:layout_height="@dimen/aboutMe_height"
               android:layout_marginBottom="@dimen/label_margin_bottom"
               android:paddingLeft="@dimen/label_padding"
                android:layout_below="@+id/about_me_lbl"
                android:text="@string/multi_txt"/>
        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/questions_btn_top"
            android:layout_marginLeft="@dimen/questions_btn_left_right"
            android:layout_marginRight="@dimen/questions_btn_left_right"
            android:gravity="center">
            <Button
                android:id = "@+id/done_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Done"
                android:background="@drawable/rounded_btns"/>
        </LinearLayout>
    </LinearLayout>
</ScrollView>