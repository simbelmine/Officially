<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/material_transp60_black"
    >

    <com.android.formalchat.RoundedImageView
        android:id="@+id/picture"
        android:layout_width="@dimen/grid_img_size"
        android:layout_height="@dimen/grid_img_size"
        android:layout_gravity="top|center_horizontal"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="@dimen/grid_img_margin"
        android:src="@drawable/profile_img"
        android:scaleType="centerInside"
        />

    <TextView
        android:id="@+id/text"
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:layout_marginTop="151dp"
        android:layout_marginLeft="7dp"
        android:layout_marginRight="7dp"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:textColor="@color/white"
        android:background="@color/items_new"
        android:text="User's Name"
        />

    <ImageView
        android:id="@+id/zodiac_sign"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="186dp"
        android:visibility="gone"
        />

    <TextView
        android:id="@+id/location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="201dp"
        />

    <TextView
        android:id="@+id/age"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="221dp"
        />

    <ImageView
        android:id="@+id/online_dot"
        android:layout_width="7dp"
        android:layout_height="7dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="251dp"
        android:layout_marginBottom="16dp"
        android:src="@drawable/oval_btn_gray"
        />
</FrameLayout>