<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="@dimen/list_item_height"
    android:background="@drawable/background"
    android:gravity="bottom"
    >
    <com.android.formalchat.RoundedImageView
        android:id="@+id/picture"
        android:layout_width="@dimen/list_img_size"
        android:layout_height="@dimen/list_img_size"
        android:scaleType="centerCrop"
        android:layout_margin="@dimen/list_img_margin"
        android:layout_centerVertical="true"
        android:src="@drawable/profile_pic"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="65dp"
        >
        <TextView
            android:id="@+id/text"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:text="User's Name"
            android:paddingLeft="@dimen/list_item_txt_padding"
            android:gravity="center|left"
            android:layout_gravity="center"
            android:textColor="@color/white"
            android:background="@color/items_new"
            />
    </LinearLayout>
</RelativeLayout>