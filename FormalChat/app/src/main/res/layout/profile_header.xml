<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="300dp"
    android:orientation="vertical"
    android:background="#414a53"
    >

    <FrameLayout
        android:id="@+id/profile_header_holder"
        android:layout_width="match_parent"
        android:layout_height="300dp">
        <!-- by placing the imageview inside the fragment we avoid overdraw when
             doing the parallax effect -->

        <ImageView
            android:id="@+id/profile_pic"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/background_dark"
            android:scaleType="centerCrop"
            />
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/material_transp60_black"
            />
        <com.android.formalchat.RoundedImageView
            android:id="@+id/small_prof_pic"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:layout_marginBottom="60dp"
            android:src="@drawable/profile_img"/>
        <ImageView
            android:id="@+id/play_profile_video_btn"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_gravity="center"
            android:layout_marginBottom="22dp"
            android:layout_marginLeft="38dp"
            android:src="@drawable/play_white"
            />
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|bottom"
            android:layout_marginBottom="120dp">
            <ImageView
                android:id="@+id/online_dot"
                android:layout_width="7dp"
                android:layout_height="7dp"
                android:background="@drawable/oval_btn"
                android:layout_centerVertical="true"
                android:layout_marginRight="5dp"
                />
            <TextView
                android:id="@+id/name_edit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="User Name"
                android:textColor="@color/white"
                android:textSize="19sp"
                android:layout_toRightOf="@+id/online_dot"
                android:layout_marginRight="5dp"
                />
        </RelativeLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="100dp"
            android:layout_gravity="center_horizontal|bottom">
            <ImageView
                android:id="@+id/zodiac_sign"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:visibility="gone"
                />
            <ImageView
                android:id="@+id/sex_icon"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginLeft="3dp"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center_horizontal|bottom"
            android:layout_marginBottom="80dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:text="Age"/>
            <TextView
                android:id="@+id/age_edit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:layout_marginLeft="10dp"
                android:text="--"/>
        </LinearLayout>
        <RelativeLayout
            android:id="@+id/progress_layout"
            android:layout_height="30dp"
            android:layout_width="30dp"
            android:background="@drawable/oval_progress"
            android:layout_gravity="top|center"
            android:gravity="center"
            android:layout_marginTop="5dp"
            android:visibility="gone"
            >
            <ProgressBar
                android:id="@+id/progresBar_photos_counter"
                style="?android:attr/progressBarStyleLarge"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_centerInParent="true"
                android:indeterminate="true"
                android:indeterminateOnly="true"
                android:visibility="gone"
                android:indeterminateDrawable="@drawable/progress"
                />
        </RelativeLayout>
        <LinearLayout
            android:id="@+id/exclamation_layout"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@color/transp_black"
            android:layout_gravity="top"
            android:gravity="center_vertical"
            android:visibility="invisible"
            >
            <ImageView
                android:id="@+id/exclamation_img"
                android:layout_width="@dimen/exclamation_size"
                android:layout_height="@dimen/exclamation_size"
                android:layout_marginLeft="@dimen/exclamation_margin_left"
                android:scaleType="fitXY"
                android:src="@drawable/exclamation" />
            <TextView
                android:id="@+id/exclamation_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/exclamation_margin_left"
                android:text="Send video to become visible to others"
                android:textColor="@color/white"
                android:textAllCaps="true"
                />
        </LinearLayout>

        <TextView
            android:id="@+id/photos_button"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:layout_gravity="bottom|left"
            android:gravity="center_vertical|center_horizontal"
            android:layout_marginLeft="@dimen/FEB_margin"
            android:layout_marginBottom="5dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:scaleType="centerInside"
            android:elevation="@dimen/FEB_elevation"
            android:background="@drawable/button_selector_drwbl_purple"
            android:textColor="@color/white"
            android:clickable="true"
            />

        <ImageButton
            android:id="@+id/feb_button"
            android:layout_width="@dimen/FEB_size"
            android:layout_height="@dimen/FEB_size"
            android:layout_gravity="bottom|right"
            android:layout_marginRight="@dimen/FEB_margin"
            android:layout_marginBottom="5dp"
            android:scaleType="centerInside"
            android:elevation="@dimen/FEB_elevation"
            android:background="@drawable/oval_btn_selector_purple"
            android:src="@drawable/pencil"
            android:padding="10dp"
            />
        <ImageButton
            android:id="@+id/feb_chat_button"
            android:layout_width="@dimen/FEB_size"
            android:layout_height="@dimen/FEB_size"
            android:layout_gravity="bottom|right"
            android:layout_marginRight="@dimen/FEB_margin"
            android:layout_marginBottom="5dp"
            android:scaleType="centerInside"
            android:elevation="@dimen/FEB_elevation"
            android:background="@drawable/oval_btn_selector_purple"
            android:src="@drawable/chats_white"
            android:padding="10dp"
            android:visibility="gone"
            />

        <RelativeLayout
            android:layout_height="50dp"
            android:layout_width="match_parent"
            android:background="@color/material_transp60_black"
            android:layout_gravity="bottom"
            android:gravity="center"
            android:elevation="@dimen/FEB_elevation"
            >
        </RelativeLayout>
    </FrameLayout>

    <!--<include layout="@layout/profile_help_screen"-->
        <!--android:layout_gravity="top"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="250dp"-->
        <!--></include>-->

</FrameLayout>