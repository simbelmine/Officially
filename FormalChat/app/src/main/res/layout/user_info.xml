        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/ethnicity_lbl"
            android:layout_width="match_parent"
            android:layout_height="@dimen/label_height"
            android:text="@string/ethnicity_lbl"
            android:paddingLeft="@dimen/label_padding"
            android:gravity="center_vertical"
            android:textAllCaps="true"
            android:background="@color/green_transp"/>
        <!--<Spinner-->
            <!--android:id="@+id/ethnicity_edit"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_below="@+id/ethnicity_lbl"-->
            <!--android:entries="@array/ethnicity_values"/>-->
        <TextView
            android:id="@+id/ethnicity_edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ethnicity_lbl"
            android:layout_marginBottom="@dimen/label_margin_bottom"
            android:paddingLeft="@dimen/label_padding"
            android:text="@string/choice_txt"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/interests_lbl"
            android:layout_width="match_parent"
