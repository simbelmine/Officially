<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main_video_layout"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:background="@color/black"
    >
        <ProgressBar
            android:id="@+id/show_video_progress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:visibility="visible"/>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/divider_info_height"
            android:layout_marginBottom="@dimen/divider_info_margin"
            android:layout_marginLeft="@dimen/divider_info_margin"
            android:layout_marginRight="@dimen/divider_info_margin"
            android:layout_marginTop="25dp"
            android:layout_gravity="top"
            android:src="@drawable/divider"/>
        <VideoView
            android:id="@+id/video"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="50dp"
            android:layout_marginBottom="50dp"
            android:layout_gravity="center"
            android:visibility="invisible"
            />
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/divider_info_height"
            android:layout_marginBottom="25dp"
            android:layout_marginLeft="@dimen/divider_info_margin"
            android:layout_marginRight="@dimen/divider_info_margin"
            android:layout_marginTop="@dimen/divider_info_margin"
            android:layout_gravity="bottom"
            android:src="@drawable/divider"/>
        <TextView
            android:id="@+id/vide_warning"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/video_warning"
            android:textColor="@color/white"
            android:shadowColor="@color/black"
            android:shadowRadius="2"
            android:shadowDx="0.5"
            android:shadowDy="0.5"
            android:gravity="center"
            android:visibility="gone"
            />
</FrameLayout>